<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000042" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >    

        <TextView
            android:id="@+id/tvTopUpBal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/topupbg"
            android:text="Current Balance: â‚¬"
            android:fontFamily="sans-serif-condensed"            
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Top Up By:"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:paddingBottom="10dp"  />

        <RadioGroup
                 android:id="@+id/radioTOPUP"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:paddingBottom="5dp"
                 android:background="#FFFFFF" >

                 <RadioButton
                     android:id="@+id/radioTOPUP5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/radio_topup5"
                     android:textColor="#000000"
                     android:textSize="20sp" />

                 <RadioButton
                     android:id="@+id/radioTOPUP10"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="@string/radio_topup10"
                     android:textColor="#000000"
                     android:textSize="20sp" />
                 
                  <RadioButton
                     android:id="@+id/radioTOPUP15"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/radio_topup15"
                     android:textColor="#000000"
                     android:textSize="20sp" />

                 <RadioButton
                     android:id="@+id/radioTOPUP20"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="@string/radio_topup20"
                     android:textColor="#000000"
                     android:textSize="20sp" />
             </RadioGroup>

       

    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:gravity="center|bottom" > 
        
             <Button
            android:id="@+id/bTopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Up"
            android:textColor="#FFFFFF" />
        
            </LinearLayout>

 </RelativeLayout>